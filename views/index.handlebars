  <img id="bannerImage" class="responsive-img z-depth-3" src="static/images/beerbanner.jpg" alt="Beer Banner">
</div>
<br><br>

<div class="container">
  <div class="section">
    <!--   Card Section   -->
    <div id="product-list" class="row">
      {{!-- item cars are loaded via ajax using load_products() --}}  
    </div>
  </div>
</div>

{{#section 'script'}}
<script type="text/javascript">

load_products('card', function(html){
  $('#product-list').html(html);
});

$(function() {
  $(".add-to-cart").on("click", function(event) {
    event.preventDefault();

    var cart = JSON.parse(sessionStorage.getItem("cart"));
    if (!Array.isArray(cart)) {
      cart = [];
    };
    
    var cartItemId = this.id; 
    cart.push(cartItemId);

    console.log("cart", cart);
    sessionStorage.setItem("cart", JSON.stringify(cart));
  });

})

console.log("index");

</script>
{{{_sections.script}}} 
{{/section}}



